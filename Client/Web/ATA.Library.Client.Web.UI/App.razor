<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <div style="background-color: white; width: 100%; height: 100%; position: absolute; top: 0; right: 0; z-index: 2;">
                        <div style="position: absolute; top: 25vh; width: 100%; text-align: center">

                            <img src="/images/auth-loading.gif" />

                            <h5 style="font-family: webyekan; font-weight: bold">
                                در حال احراز هویت ...
                            </h5>

                        </div>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <PageNotFound />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>