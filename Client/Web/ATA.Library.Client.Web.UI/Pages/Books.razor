@page "/books"
@page "/books/{CategoryId:int}"
@page "/books/{CategoryId:int}/{CategoryTitle}"

@if (_books == null)
{
    <Loading />
}
else if (_books.Count == 0)
{
    <div class="no-books-container">
        <img class="no-book-image" src="/images/components/no-book-found.jpg" />
    </div>
}
else
{
    <div class="row">

        @foreach (var book in _books)
        {
            <div class="col-sm-6 col-lg-4 col-xl-3">
                <Book BookDto="@book" @key="@book.Id" />
            </div>
        }

    </div>
}