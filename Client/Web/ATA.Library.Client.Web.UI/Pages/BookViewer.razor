@page "/book-viewer/{BookId:int}/{BookTitle?}"

@layout EmptyLayout

@if (_serverUrl == null)
{
    <Loading />
}
else
{
    <SfPdfViewer DocumentPath="@BookId.ToString()"
                 ServiceUrl="@_serverUrl"
                 Height="100vh"
                 Width="100vw"
                 EnableDownload="false"
                 EnablePrint="false"></SfPdfViewer>
}
