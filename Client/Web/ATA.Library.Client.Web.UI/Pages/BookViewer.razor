@page "/book-viewer/{BookId:int}/{BookTitle?}"

@layout EmptyLayout

@if (BookId == null)
{
    <Loading />
}
else
{
    <SfPdfViewer DocumentPath="@BookId"
                 ServiceUrl="https://localhost:44361/api/v1/pdf-viewer"
                 Height="100vh"
                 Width="100vw"
                 EnableDownload="false"
                 EnablePrint="false"></SfPdfViewer>
}
